<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/up_block"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/uplow_blocks"
    ></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/up_block"
        android:layout_above="@id/main_button"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/greetings_ins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="@string/greetings"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="376dp"
            android:layout_below="@id/greetings_ins"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="fill_horizontal"
            android:lineHeight="30dp"
            android:text="@string/about_tm"
            android:textSize="23dp" />


    </RelativeLayout>

    <Button
        android:id="@+id/main_button"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/low_block"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="91dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="23dp"
        android:backgroundTint="@color/for_buttons"
        android:fontFamily="@font/montserrat_bold"
        android:onClick="toUnCompleted"
        android:text="@string/main_button"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/low_block"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/uplow_blocks"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>