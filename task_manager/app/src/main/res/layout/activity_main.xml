<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/up_block"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/uplow_blocks"
    ></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/up_block"
        android:layout_above="@id/main_button"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/greetings_ins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/greetings"
            android:textSize="30sp"
            android:layout_marginHorizontal="35dp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_tm"
            android:layout_below="@id/greetings_ins"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:lineHeight="30dp"
            android:gravity="center"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/main_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/low_block"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:backgroundTint="@color/for_buttons"
        android:onClick="toCompleted"
        android:textSize="20sp"
        android:text="@string/main_button" />

    <RelativeLayout
        android:id="@+id/low_block"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/uplow_blocks"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>